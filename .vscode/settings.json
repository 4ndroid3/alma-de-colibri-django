{
    "[python]": {
        "editor.rulers": [100],
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "black-formatter.args": [
        "--config",
        "/workspace/pyproject.toml"
    ],
    "isort.args": [
        "--settings-file",
        "/workspace/pyproject.toml"
    ],
}